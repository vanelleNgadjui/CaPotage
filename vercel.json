{
    "version": 2,
    "builds": [
      {
        "src": "core/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb", "runtime": "python3" }
      },
      {
        "src": "build_files.sh",
        "use": "@vercel/static-build",
        "config": {
        }
      }
    ],
    "routes": [
      { "handle": "filesystem" },
      { "src": "/static/(.*)", "dest": "/static/$1" },
      { "src": "/media/(.*)", "dest": "/media/$1" },
      {
        "src": "/(.*)",
        "dest": "core/wsgi.py"
      }
    ]
  }